[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
background = #004d61
background-alt = #004d61

foreground = #fff7f7
foreground-alt = #fff7f7

primary = #96ceb4
secondary = #ffad60
alert = #f6003c

[bar/top]
override-redirect = true
bottom = false

width = 100%
height = 35

background = ${colors.background}
foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%


