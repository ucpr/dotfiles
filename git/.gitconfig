[user]
  email = contact@ucpr.dev
  name = ucpr
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGP9SST4B4yB0dzvlphF8/Vae1mbedOb+F91AxjayAbG
[ghq]
  root = ~/.ghq
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
[interactive]
  diffFilter = delta --color-only
[commit]
  template = ~/.gitmessage
  verbose = true
  gpgsign = true
[core]
  editor = nvim
[color]
  ui = true
  excludeFile = ""
[alias]
  ck = checkout
  ss = status
  df = diff
  co = commit
  br = branch
  p = push
  ph = push origin head
  pl = pull
  graph = log --pretty=format:'%Cgreen[%cd] %Cblue%h %Cred<%cn> %Creset%s' --date=short  --decorate --graph --branches --tags --remotes
  ucat = !"git ls-files --others --exclude-standard | xargs bat"
[fetch]
  prune = true
[pull]
  rebase = true
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[gpg]
  format = ssh
[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
  allowedSignersFile = ~/.ssh/allowed_signers
